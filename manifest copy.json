{
  "manifest_version": 3,
  "name": "ANOTHERpass Web",
  "version": "0.1",
  "description": "Use ANOTHpass in the browser",
  "homepage_url": "https://anotherpass.jepfa.de",
  "icons": {
    "48": "icons/anotherpass-48.png",
    "96": "icons/anotherpass-96.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "clipboardWrite"
  ],
  "content_security_policy": {
    "extension_pages": "default-src http://*:8001; script-src 'self'"
  },
  "action": {
    "default_icon": "icons/anotherpass-512.png",
    "default_title": "ANOTHERpass",
    "default_popup": "popup/enter_ip.html"
  },
  "background": {
    "scripts": [
      "background_scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "libs/jquery-ui-1.13.2/jquery-ui.js",
        "libs/jquery-ui-1.13.2/jquery-ui.min.js",
        "libs/jquery-ui-1.13.2/jquery-ui.structure.js",
        "libs/jquery-ui-1.13.2/jquery-ui.theme.js",
        "content_scripts/content.js"
      ],
      "css": [
        "libs/jquery-ui-1.13.2/jquery-ui.css",
        "libs/jquery-ui-1.13.2/jquery-ui.min.css",
        "libs/jquery-ui-1.13.2/jquery-ui.structure.css",
        "libs/jquery-ui-1.13.2/jquery-ui.theme.css"
      ]
    }
  ]
}